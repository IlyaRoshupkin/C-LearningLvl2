<Window x:Class="homework5.DepartmentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:homework5"
        mc:Ignorable="d"
        Title="Departments" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="352*"/>
        </Grid.ColumnDefinitions>
        <ListView Name="listDepartments"  HorizontalContentAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,-0.4,90" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="250">Департамент</GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>
        <Button x:Name="btnAddDep" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="45" Width="95" Grid.Column="1" Margin="0,0,0,25" Click="btnAddDep_Click"/>
        <TextBox x:Name="tbNewDep" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Новый Департамент" VerticalAlignment="Top" Width="245" Grid.Column="1" Margin="35.4,364,0,0"/>
    </Grid>
</Window>
